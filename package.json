{
    "name": "php-cf",
    "displayName": "CF PHP Extension",
    "description": "Tools for developing PHP Cresenity Framework on VSCode",
    "version": "1.2.8",
    "publisher": "cresenity",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cresenity/cf-php-vscode-extension"
    },
    "engines": {
        "vscode": "^1.61.0"
    },
    "icon": "images/icon.png",
    "activationEvents": [
        "workspaceContains:cf"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "PHP CF configuration",
            "properties": {
                "phpcf.viewQuickJump": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use 'Ctrl' or 'Alt' + click"
                },
                "phpcf.uriControllerQuickJump": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use 'Ctrl' or 'Alt' + click"
                },
                "phpcf.maxLineScanningCount": {
                    "type": "integer",
                    "default": 666,
                    "description": "Maximum number of scanning rows"
                },
                "phpcf.viewExtensions": {
                    "type": "array",
                    "default": [
                        ".blade.php",
                        ".php"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true,
                    "description": "Multiple extensions"
                },
                "phpcf.phpstan": {
                    "type": "object",
                    "default": {
                        "enabled":true
                    },
                    "properties": {
                        "enabled": {
                            "type": "boolean",
							"description": "Indicates PHPStan enable or not"
                        }
                    },
                    "additionalProperties": false,
                    "description": "Phpstan setting"
                }

            }
        }
    },
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/lru-cache": "^5.1.1",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.3",
        "eslint": "^8.0.0",
        "mocha": "^9.1.2",
        "typescript": "^4.4.3",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "php-parser": "^3.0.1",
        "@types/websocket": "^1.0.4",
        "fs-extra": "^10.0.0",
        "ftp": "^0.3.10",
        "http-shutdown": "^1.2.2",
        "ips": "^2.1.3",
        "joi": "^17.4.2",
        "lru-cache": "^6.0.0",
        "opn": "^5.4.0",
        "p-queue": "^7.1.0",
        "ssh-config": "^4.0.6",
        "tmp": "^0.2.1",
        "vsls": "^0.3.967",
        "websocket": "^1.0.34"
    }
}
